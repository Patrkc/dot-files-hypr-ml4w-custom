	"vim.highlightedyank.enable": true,
	"vim.highlightedyank.color": "#89b4fa",
	"vim.highlightedyank.duration": 250,
	"vim.useSystemClipboard": true,
	"vim.easymotion": true,
	"vim.surround": true,

	"vim.statusBarColors.normal": ["#181825", "#cdd6f4"], // Text on Crust
	"vim.statusBarColors.insert": ["#181825", "#89b4fa"],
	"vim.statusBarColors.visual": ["#181825", "#cba6f7"],
	"vim.statusBarColors.visualblock": ["#18V1825", "#f38ba8"],
	"vim.statusBarColors.visualline": ["#181825", "#f38ba8"],
	"vim.statusBarColors.replace": ["#181825", "#cdd6f4"], // Text on Crust
	"vim.statusBarColors.commandlineinprogress": ["#181825", "#cdd6f4"], // Text on Crust
	"vim.statusBarColors.searchinprogressmode": ["#181825", "#cdd6f4"], // Text on Crust
	"vim.statusBarColors.easymotionmode": ["#181825", "#cdd6f4"], // Text on Crust
	"vim.statusBarColors.easymotioninputmode": ["#181825", "#cdd6f4"], // Text on Crust
	"vim.statusBarColors.surroundinputmode": ["#181825", "#cdd6f4"], // Text on Crust
