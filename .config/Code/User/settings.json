	"vim.easymotionIncSearchForegroundColor": "#cba6f7",
	// "vim.easymotionIncSearchForegroundColor": "#11111b",

	// VIM will ignore these Keybindings
	"vim.handleKeys": {
		"<C-d>": false,
		"<C-f>": false,
		"<C-c>": false,
		"<C-v>": false,
		"<C-x>": false,
		"<S-n>": false,
		"<C-a>": false
	},
	"vim.insertModeKeyBindings": [
		{
			"before": ["j", "j"],
			"after": ["<Esc>"]
		}
	],
	"vim.normalModeKeyBindingsNonRecursive": [
		/******** Code Actions ********/
		{
			"before": ["<leader>", "g"],
			"commands": ["workbench.action.gotoLine"]
		},
		{
			"before": ["<leader>", "c", "r"],
			"commands": ["editor.action.rename"]
		},
		{
			"before": ["<leader>", "c", "s"],
			"commands": ["editor.action.gotoSymbol"]
		},
		{
			"before": ["<leader>", "e"],
			"commands": ["workbench.action.showAllEditors"]
		},
		{
			"before": ["g", "p", "d"],
			"commands": ["editor.action.peekDefinition"]
		},
		{
			"before": ["g", "h"],
			"commands": ["editor.action.showDefinitionPreviewHover"]
		},
		{
			"before": ["g", "d"],
			"commands": ["editor.action.revealDefinition"]
		},
		{
			"before": ["g", "i"],
			"commands": ["editor.action.goToImplementation"]
		},
		{
			"before": ["g", "p", "i"],
			"commands": ["editor.action.peekImplementation"]
		},
		{
			"before": ["g", "q"],
			"commands": ["editor.action.quickFix"]
		},
		{
			"before": ["g", "r"],
			"commands": ["editor.action.referenceSearch.trigger"]
		},
		{
			"before": ["g", "t"],
			"commands": ["editor.action.goToTypeDefinition"]
		},
		{
			"before": ["g", "p", "t"],
			"commands": ["editor.action.peekTypeDefinition"]
		},
		{
			"before": ["[", "d"],
			"commands": ["editor.action.marker.prev"]
		},
		{
			"before": ["]", "d"],
			"commands": ["editor.action.marker.next"]
		},
		{
			"before": ["<leader>", "c", "a"],
			"commands": ["editor.action.quickFix"]
		},
		{
			"before": ["<leader>", "f"],
			"commands": ["workbench.action.quickOpen"]
		},
		{
			"before": ["<leader>", "s", "w"],
			"commands": ["workbench.action.showAllSymbols"]
		},
		{
			"before": ["<leader>", "s", "c"],
			"commands": ["workbench.action.showCommands"]
		},
		{
			"before": ["<leader>", "g", "g"],
			"commands": ["workbench.view.scm"]
		},
		{
			"before": ["d"],
			"after": ["\"", "_", "d"]
		},
		{
			"before": ["D"],
			"after": ["\"", "_", "D"]
		},
		{
			"before": ["d", "d"],
			"after": ["\"", "_", "d", "d"]
		},
		/******** Extensions ********/
		// Harpoon
		{
			"before": ["<leader>", "a"],
			"commands": ["vscode-harpoon.addEditor"]
		},
		{
			"before": ["<leader>", "p, e"],
			"commands": ["vscode-harpoon.editEditors"]
		},
		{
			"before": ["<leader>", "s", "e"],
			"commands": ["vscode-harpoon.editorQuickPick"]
		},
		{
			"before": ["<leader>", "0"],
			"commands": ["vscode-harpoon.gotoEditor1"]
		},
		{
			"before": ["<leader>", "5"],
			"commands": ["vscode-harpoon.gotoEditor2"]
		},
		{
			"before": ["<leader>", "6"],
			"commands": ["vscode-harpoon.gotoEditor3"]
		},
		{
			"before": ["<leader>", "-"],
			"commands": ["vscode-harpoon.gotoEditor4"]
		},
		// Toggle Booleans
		{
			"before": ["<leader>", "i"],
			"commands": ["extension.toggleBool"]
		},
		{
			"before": ["<leader>", "l", "g"],
			"commands": ["lazygit.openLazygit"]
		},
		// NAVIGATION
		// splits
		{
			"before": ["leader", "s"],
			"commands": [":vsplit"]
		},
		{
			"before": ["leader", "h"],
			"commands": [":split"]
		},
		// NICE TO HAVE
		{
			"before": ["leader", "w"],
			"commands": [":w!"]
		},
		{
			"before": ["leader", "q"],
			"commands": [":q!"]
		},
		{
			"before": ["leader", "x"],
			"commands": [":x!"]
		}
	],
	"vim.visualModeKeyBindings": [
		// Stay in visual mode while indenting
		{
			"before": ["<"],
			"commands": ["editor.action.outdentLines"]
		},
		{
			"before": [">"],
			"commands": ["editor.action.indentLines"]
		},
		// Move selected lines while staying in visual mode
		{
			"before": ["J"],
			"commands": ["editor.action.moveLinesDownAction"]
		},
		{
			"before": ["K"],
			"commands": ["editor.action.moveLinesUpAction"]
		},
		// toggle comment selection
		{ "before": ["leader", "c"], "commands": ["editor.action.commentLine"] }
	],
	"vim.visualModeKeyBindingsNonRecursive": [
		{
			"before": ["d"],
			"after": ["\"", "_", "d"]
		}
	],
