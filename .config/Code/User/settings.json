	"workbench.secondarySideBar.enabled": false,
	"screencastMode.fontSize": 25,
	"screencastMode.verticalOffset": 10,
	"workbench.editor.revealIfOpen": true,
	"editor.tokenColorCustomizations": {
		"textMateRules": [
			{
				"scope": [
					//following will be in italic (=FlottFlott)
					"comment",
					"entity.name.type.class", //class names
					"keyword", //import, export, return
					"constant", //String, Number, Boolean, this, super
					"storage.modifier", //static keyword
					"storage.type.class.js" //class keyword
				],
				"settings": {
					"fontStyle": "italic"
				}
			},
			{
				"scope": [
					//following will be excluded from italics (VSCode has some defaults for italics)
					"invalid",
					"keyword.operator",
					"constant.numeric.css",
					"keyword.other.unit.px.css",
					"constant.numeric.decimal.js",
					"constant.numeric.json"
				],
				"settings": {
					"fontStyle": ""
				}
			}
		]
	},
	"workbench.colorCustomizations": {
		"statusBar.background": "#181825",
		"statusBar.noFolderBackground": "#181825",
		"statusBar.debuggingBackground": "#181825",
		"statusBar.foreground": "#cdd6f4",
		"statusBar.debuggingForeground": "#cdd6f4"
	},
	// VIM Config
	"vim.leader": "<Space>",
	"editor.cursorSurroundingLines": 8,
	"vim.useCtrlKeys": false,
	"editor.wordSeparators": "`~!@#$%^&*()=+[{]}\\|;:'\",.<>/?",
